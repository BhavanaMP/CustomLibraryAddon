<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="product_template_product_form_inherit" model="ir.ui.view">
            <field name="name">product.template.product.form.inherited</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='default_code']" position="after">
                <div>
                    <field name="is_book"/>
                    <label for="is_book"/>
                </div>
                    
                </xpath>
                <xpath expr="//field[@name='default_code']" position="before">
                    <field name="author_id" />
                </xpath>
                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="publication_date" />
                    <field name="book_language"/>
                </xpath>
                <xpath expr="//field[@name='categ_id']">
                    <field name="book_description" />
                </xpath>
            </field>
        </record>

    </data>
</odoo>