<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="contacts_booking_report" model="ir.actions.report">
        <field name="name">Print Bookings</field>
        <field name="model">res.partner</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">lib_portal.booking_report</field>
        <field name="report_file">lib_portal.booking_report</field>
        <field name="print_report_name">'Print Report'</field>
        <field name="binding_model_id" ref="model_res_partner"/>
        <field name="binding_type">report</field>
    </record>

    <template id="booking_report">
        <t t-call="web.external_layout">
            <div class="page">
                <t t-foreach="docs" t-as="obj">
                    <div class="col-md-6">
                        <table style="width:243pt; height:153pt; border: 1pt solid black; border-collapse:separate; border-radius:8pt; margin:5pt">
                            <td style="width:33%;" valign="center">
                                <table style="width:77pt; height:150pt">
                                    <tr style="height:30%">
                                        <td align="center" valign="center">
                                         <t t-foreach="obj.book_ids" t-as="books">
                                             <tr>
                                                <td>
                                                     
                                                     <img t-if="books.image_1920" t-att-src="image_data_uri(books.image_1920)" style="max-height:45pt;max-width:90%" alt="Company Logo"/> 
                                                    <tr><td><div align="center" style="font-size:10pt;margin-bottom:5pt;"><t t-esc="books.name"/></div></td></tr>
                                                  
                                                </td>
                                             </tr>
                                             </t>
                                        </td>
                                    </tr>
                                    <tr style="height:70%;">
                                        <td align="center" valign="center">
                                         
                                        </td>
                                    </tr>
                                </table>
                            </td>
                            <td style="width:67%" valign="center">
                                <table style="width:155pt; height:85pt">
                                    <tr><th><div style="font-size:15pt; margin-bottom:0pt;margin-top:0pt;" align="center"><t t-esc="obj.book_ids"/></div></th></tr> 
                                    <tr><td><div align="center" style="font-size:10pt;margin-bottom:5pt;"><t t-esc="obj.name"/></div></td></tr>
                                </table>
                            </td>
                        </table>
                    </div>
                </t>
            </div>
        </t>
    </template>
</odoo>
